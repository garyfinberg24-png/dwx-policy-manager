{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.40.2.10011",
      "templateHash": "16788233654808903228"
    }
  },
  "parameters": {
    "baseName": {
      "type": "string",
      "defaultValue": "dwx-pm",
      "minLength": 3,
      "maxLength": 15,
      "metadata": {
        "description": "Base name prefix for all resources (e.g., dwx-pm)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for all resources"
      }
    },
    "openAiModelName": {
      "type": "string",
      "defaultValue": "gpt-4",
      "metadata": {
        "description": "Azure OpenAI model deployment name"
      }
    },
    "openAiModelVersion": {
      "type": "string",
      "defaultValue": "0613",
      "metadata": {
        "description": "Azure OpenAI model version"
      }
    },
    "openAiCapacity": {
      "type": "int",
      "defaultValue": 10,
      "minValue": 1,
      "maxValue": 80,
      "metadata": {
        "description": "Azure OpenAI deployment capacity (TPM in thousands)"
      }
    },
    "sharePointSiteUrl": {
      "type": "string",
      "defaultValue": "https://mf7m.sharepoint.com",
      "metadata": {
        "description": "SharePoint site URL for CORS configuration"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": [
        "dev",
        "staging",
        "prod"
      ],
      "metadata": {
        "description": "Environment tag"
      }
    },
    "nodeVersion": {
      "type": "string",
      "defaultValue": "~18",
      "metadata": {
        "description": "Node.js runtime version for Functions"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(resourceGroup().id, parameters('baseName'))]",
    "storageAccountName": "[toLower(replace(format('{0}st{1}', parameters('baseName'), variables('uniqueSuffix')), '-', ''))]",
    "functionAppName": "[format('{0}-quiz-func-{1}', parameters('baseName'), parameters('environment'))]",
    "appServicePlanName": "[format('{0}-quiz-plan-{1}', parameters('baseName'), parameters('environment'))]",
    "appInsightsName": "[format('{0}-quiz-insights-{1}', parameters('baseName'), parameters('environment'))]",
    "logAnalyticsName": "[format('{0}-quiz-logs-{1}', parameters('baseName'), parameters('environment'))]",
    "openAiAccountName": "[format('{0}-openai-{1}', parameters('baseName'), parameters('environment'))]",
    "keyVaultName": "[format('{0}-kv-{1}', parameters('baseName'), variables('uniqueSuffix'))]",
    "tags": {
      "project": "DWx Policy Manager",
      "component": "Quiz Generator",
      "environment": "[parameters('environment')]",
      "managedBy": "Bicep"
    },
    "keyVaultSecretsUserRoleId": "4633458b-17de-408a-b874-0445c86b69e6",
    "cognitiveServicesOpenAiUserRoleId": "5e0bd9bd-7b93-4f28-af87-19fc36ad61bd"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2023-09-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('appInsightsName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]",
        "RetentionInDays": 30
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-05-01",
      "name": "[take(variables('storageAccountName'), 24)]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2024-04-01-preview",
      "name": "[variables('openAiAccountName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "kind": "OpenAI",
      "sku": {
        "name": "S0"
      },
      "properties": {
        "customSubDomainName": "[variables('openAiAccountName')]",
        "publicNetworkAccess": "Enabled",
        "networkAcls": {
          "defaultAction": "Allow"
        }
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/deployments",
      "apiVersion": "2024-04-01-preview",
      "name": "[format('{0}/{1}', variables('openAiAccountName'), parameters('openAiModelName'))]",
      "sku": {
        "name": "Standard",
        "capacity": "[parameters('openAiCapacity')]"
      },
      "properties": {
        "model": {
          "format": "OpenAI",
          "name": "[parameters('openAiModelName')]",
          "version": "[parameters('openAiModelVersion')]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-07-01",
      "name": "[take(variables('keyVaultName'), 24)]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "enableRbacAuthorization": true,
        "enableSoftDelete": true,
        "softDeleteRetentionInDays": 7
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[format('{0}/{1}', take(variables('keyVaultName'), 24), 'azure-openai-api-key')]",
      "properties": {
        "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName')), '2024-04-01-preview').key1]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', take(variables('keyVaultName'), 24))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-12-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "kind": "functionapp",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic"
      },
      "properties": {
        "reserved": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-12-01",
      "name": "[variables('functionAppName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "kind": "functionapp",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "nodeVersion": "[parameters('nodeVersion')]",
          "cors": {
            "allowedOrigins": [
              "[parameters('sharePointSiteUrl')]",
              "https://localhost:4321"
            ],
            "supportCredentials": false
          },
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', take(variables('storageAccountName'), 24), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', take(variables('storageAccountName'), 24)), '2023-05-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', take(variables('storageAccountName'), 24), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', take(variables('storageAccountName'), 24)), '2023-05-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[toLower(variables('functionAppName'))]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "node"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~18"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').InstrumentationKey]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').ConnectionString]"
            },
            {
              "name": "AZURE_OPENAI_ENDPOINT",
              "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName')), '2024-04-01-preview').endpoint]"
            },
            {
              "name": "AZURE_OPENAI_API_KEY",
              "value": "[format('@Microsoft.KeyVault(VaultName={0};SecretName=azure-openai-api-key)', take(variables('keyVaultName'), 24))]"
            },
            {
              "name": "AZURE_OPENAI_DEPLOYMENT",
              "value": "[parameters('openAiModelName')]"
            },
            {
              "name": "AZURE_OPENAI_API_VERSION",
              "value": "2024-02-15-preview"
            }
          ],
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]",
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "[resourceId('Microsoft.KeyVault/vaults', take(variables('keyVaultName'), 24))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', take(variables('storageAccountName'), 24))]"
      ]
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "scope": "[resourceId('Microsoft.KeyVault/vaults', take(variables('keyVaultName'), 24))]",
      "name": "[guid(resourceId('Microsoft.KeyVault/vaults', take(variables('keyVaultName'), 24)), resourceId('Microsoft.Web/sites', variables('functionAppName')), variables('keyVaultSecretsUserRoleId'))]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('keyVaultSecretsUserRoleId'))]",
        "principalId": "[reference(resourceId('Microsoft.Web/sites', variables('functionAppName')), '2023-12-01', 'full').identity.principalId]",
        "principalType": "ServicePrincipal"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]",
        "[resourceId('Microsoft.KeyVault/vaults', take(variables('keyVaultName'), 24))]"
      ]
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "scope": "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))]",
      "name": "[guid(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName')), resourceId('Microsoft.Web/sites', variables('functionAppName')), variables('cognitiveServicesOpenAiUserRoleId'))]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('cognitiveServicesOpenAiUserRoleId'))]",
        "principalId": "[reference(resourceId('Microsoft.Web/sites', variables('functionAppName')), '2023-12-01', 'full').identity.principalId]",
        "principalType": "ServicePrincipal"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))]"
      ]
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "metadata": {
        "description": "Function App name"
      },
      "value": "[variables('functionAppName')]"
    },
    "functionAppUrl": {
      "type": "string",
      "metadata": {
        "description": "Function App default hostname"
      },
      "value": "[format('https://{0}', reference(resourceId('Microsoft.Web/sites', variables('functionAppName')), '2023-12-01').defaultHostName)]"
    },
    "openAiEndpoint": {
      "type": "string",
      "metadata": {
        "description": "Azure OpenAI endpoint"
      },
      "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName')), '2024-04-01-preview').endpoint]"
    },
    "openAiDeploymentName": {
      "type": "string",
      "metadata": {
        "description": "Azure OpenAI deployment name"
      },
      "value": "[parameters('openAiModelName')]"
    },
    "appInsightsKey": {
      "type": "string",
      "metadata": {
        "description": "Application Insights instrumentation key"
      },
      "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').InstrumentationKey]"
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Key Vault name"
      },
      "value": "[take(variables('keyVaultName'), 24)]"
    },
    "functionAppPrincipalId": {
      "type": "string",
      "metadata": {
        "description": "Function App principal ID (for additional RBAC)"
      },
      "value": "[reference(resourceId('Microsoft.Web/sites', variables('functionAppName')), '2023-12-01', 'full').identity.principalId]"
    }
  }
}